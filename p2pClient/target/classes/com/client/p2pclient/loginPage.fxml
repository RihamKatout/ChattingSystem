<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="450.0" maxWidth="300.0" minHeight="450.0" minWidth="300.0" prefHeight="450.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.p2pclient.LoginPageController">
   <children>
      <VBox alignment="CENTER" maxHeight="500.0" maxWidth="300.0" minHeight="450.0" minWidth="300.0" prefHeight="450.0" prefWidth="300.0">
         <children>
            <Label text="Username">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <TextField fx:id="userNameTextField">
               <VBox.margin>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="password">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <TextField fx:id="passwordTextField">
               <VBox.margin>
                  <Insets bottom="20.0" left="50.0" right="50.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="loginButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#login" text="Log in" />
            <Label fx:id="UserNotFoundLabel" text="User Not Found" textFill="RED" visible="false">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="CreateUserButton" mnemonicParsing="false" onAction="#CreateUser" text="Create User" visible="false">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
